{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],

  "compilerOptions": {
    "types": ["node"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": false, // ← 未使用変数を許可
    "noUnusedParameters": false // ← 未使用パラメータを許可
  }
}
